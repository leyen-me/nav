// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Icon {
  id            String       @id @default(cuid())
  mimeType      String       @map("mime_type")
  data          Bytes        @db.LongBlob
  createdAt     DateTime     @default(now()) @map("created_at")
  navigations   Navigation[]
  
  @@map("icons")
}

model Navigation {
  id              String    @id @default(cuid())
  title           String
  shortDescription String?  @map("short_description")
  description     String?   @db.Text
  url             String    @db.Text
  icon            String?
  iconId          String?   @map("icon_id")
  iconRelation    Icon?     @relation(fields: [iconId], references: [id], onDelete: SetNull)
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  visits          Int       @default(0)
  status          String    @default("approved") @map("status")
  isPublic        Boolean   @default(true) @map("is_public")
  tags            NavigationTag[]

  @@map("navigations")
}

model Submission {
  id              String    @id @default(cuid())
  title           String
  url             String    @db.Text
  description     String?   @db.Text
  status          String    @default("pending") @map("status")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  reviewedAt      DateTime? @map("reviewed_at")
  reviewedBy      String?   @map("reviewed_by")

  @@map("submissions")
}

model Tag {
  id            String    @id @default(cuid())
  name          String    @unique
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  navigations   NavigationTag[]

  @@map("tags")
}

model NavigationTag {
  id            String      @id @default(cuid())
  navigationId  String      @map("navigation_id")
  tagId         String      @map("tag_id")
  navigation    Navigation   @relation(fields: [navigationId], references: [id], onDelete: Cascade)
  tag           Tag          @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now()) @map("created_at")

  @@unique([navigationId, tagId])
  @@map("navigation_tags")
}
